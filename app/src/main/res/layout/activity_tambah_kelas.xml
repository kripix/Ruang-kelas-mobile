<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.kelas.tambah.TambahKelasActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:elevation="7dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_close_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="Tambah Kelas"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="10dp">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_gray"
            app:boxBackgroundMode="none"
            android:paddingTop="4dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nama_kelas"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:hint="Nama Kelas (required)"
                android:paddingTop="0dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="4dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_gray"
            android:layout_marginTop="16dp"
            app:boxBackgroundMode="none"
            android:paddingTop="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nama_grade"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:hint="Grades"
                android:paddingTop="0dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="4dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_gray"
            android:layout_marginTop="16dp"
            app:boxBackgroundMode="none"
            android:paddingTop="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/deskripsi"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:hint="Deskripsi"
                android:paddingTop="0dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="4dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Icon Kelas"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/add_icon_card"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/card_border">
                <RelativeLayout
                    android:layout_width="96dp"
                    android:layout_height="96dp">
                    <ImageView
                        android:id="@+id/pv_img"
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:padding="4dp"
                        android:src="@drawable/baseline_image_24"
                        />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="right|bottom"
                        android:background="@drawable/circle"
                        android:elevation="2dp"
                        android:layout_margin="4dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/baseline_add_24" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_ic_kelas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                tools:listitem="@layout/item_icon_kelas"
                tools:itemCount="2"
                />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/buat_kelas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="10dp"
        android:text="Buat Kelas"
        android:background="@drawable/rounded_block"
        />




</LinearLayout>